<% provide(:title, 'Edit the Trainer') %>
<h1>Edit the trainer</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@trainer) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      

      <%= f.label :email %>
      <%= f.email_field :email , class: 'form-control' %>

      

      

      <%= f.submit "edit the trainer", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


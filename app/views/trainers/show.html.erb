<% provide(:title, "Show-Tokimon") %>
<h1>Trainer's Tokemon's profile</h1>
<% link_to "<< Back to Trainer List", trainers_path %>

<p id="notice"><%= notice %></p>

<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
	    <th>Name</th>
	    <th>Weight</th>
	    <th>Height</th>
	    <th>Fly</th>
	    <th>Fight</th>
	    <th>Fire</th>
	    <th>Water</th>
	    <th>Electric</th>
	    <th>Ice</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
    </thead>
     <tbody>
        <%@tokimons.each do |f| %>
      	<tr>
    	    <td><%= f.name %></td>
    		<td><%= f.weight %></td>
    		<td><%= f.height %></td>
    		<td><%= f.fly %></td>
    		<td><%= f.fight %></td>
    		<td><%= f.fire %></td>
    		<td><%= f.water %></td>
    		<td><%= f.electric %></td>
    		<td><%= f.ice %></td>
    		<td><%= link_to "Edit", @tokimons_edit_path, class: "btn btn-primary" %></td>
    		<td><%= link_to 'Delete This Yokimon', @tokimons_destroy_path, data: { confirm: 'Do you want to delete the information?' }, class: "btn btn-danger" %></td>
      	</tr>
     	<% end %>
    </tbody>
  </table>
</div>

<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 90%;">
    60%
  </div>
</div>



